<div class="myaccountblock">
  <div align="center">
    <!-- START:flash -->
    <% if flash[:notice] -%>
      <div id="notice"><%= flash[:notice] %></div>
    <% end -%>
    <!-- END:flash -->
  </div>

  <div id="site-pref-list">
    <h1  class="myaccountheader">Vendor</h1>

    <center><%= link_to 'New Vendor', :action=>:create_empty_record,:typeofrecord=>"vendor" %></center>

    <%  @vendors.each do |vendor| %>
      <div class="hr"></div>
      <table class="list-table" width ="100%"cellpadding="5" cellspacing="0">
        <tr class="list-table" valign="top" class="<%= cycle('list-line-odd', 'list-line-even') %>"  onclick = "window.location.href ='<%=url_for(:controller => 'vendors', :id => vendor.id,  :action => 'edit')%>' "  style = "cursor:pointer" >
                      <td align="left">
    <span class="list-title"><%= vendor.company_name %></span>
          </td>
                   <td align="left">
    <span class="list-title"><%= vendor.billing_street_address %></span>
          </td>
                   <td align="left">
    <span class="list-title"><%= vendor.billing_city %></span>
          </td>
                   <td align="left">
    <span class="list-title"><%= vendor.billing_state %></span>
          </td>
                   <td align="left">
    <span class="list-title"><%= vendor.billing_zip_code %></span>
          </td>
                   <td align="left">
    <span class="list-title"><%= vendor.shipping_street_address %></span>
          </td>
                   <td align="left">
    <span class="list-title"><%= vendor.shipping_city %></span>
          </td>
                   <td align="left">
    <span class="list-title"><%= vendor.shipping_state %></span>
          </td>
                   <td align="left">
    <span class="list-title"><%= vendor.shipping_zip_code %></span>
          </td>
                   <td align="left">
    <span class="list-title"><%= vendor.phone_number %></span>
          </td>
                   <td align="left">
    <span class="list-title"><%= vendor.fax_number %></span>
          </td>
                   <td align="left">
    <span class="list-title"><%= vendor.email_address %></span>
          </td>
                   <td align="left">
    <span class="list-title"><%= vendor.contact_name %></span>
          </td>
          
        </tr>
      </table>
      <div align="right" class="image-delete-list" >
        <%=link_to image_tag ("Button-Delete.png", :border=>"0") , vendor,:on_click=>"", :confirm => 'Are you sure?', :method => :delete %>
      </div>
    <% end %>
    <div class="hr"></div>

  </div>
    <center><%= link_to 'New Vendor', :action=>:create_empty_record,:typeofrecord=>"vendor" %></center>
</div>
