<%  for property in @properties do %>
    <table width="800">
      <tbody>
        <tr>
          <td rowspan="5" width="205"><%= image_tag property.photo_url {}, :style=>"width: 200px;" %></td> 
          <td align="right" width="150"><b>Location:</b></td>
          <td width="200"><%=property.municipality%></td>
          <td width="200" align="right"><b><%=property.title%></b></td>
          <td width="100"></td>
        </tr>
        <tr>
          <td align="right" ><b>Full Bathroom:</b></td>
          <td><%=property.fullbaths%></td>
          <td align="right" ><b>Half Bathroom:</b></td>
          <td><%=property.halfbaths%></td>
        </tr>
        <tr>
          <td align="right" ><b>Lot Size(acres):</b></td>
          <td><%=property.acreage%></td>
          <td align="right" ><b>Square Feet:</b></td>
          <td><%=property.squarefeet%></td>    
        </tr>
        <tr>
          <td align="right" ><b>Year Built:<b></td>
          <td><%=property.yearbuilt%></td>
          <td></td>
          <td></td>    
        </tr>
        <tr>
           
          <td align="right" ><b>Exterior:</b></td>
          <td colspan="3"><%=property.exterior%></td>
          
        </tr>
        <tr>
          <td colspan="5">
            <hr>
          </td>
        </tr>
      </tbody>
    </table>
  <%end%>

  <%=@properties.size%> properties found in search.