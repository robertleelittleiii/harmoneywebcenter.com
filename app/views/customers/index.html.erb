<div class="myaccountblock">
  <div align="center">
    <!-- START:flash -->
    <% if flash[:notice] -%>
      <div id="notice"><%= flash[:notice] %></div>
    <% end -%>
    <!-- END:flash -->
  </div>

  <div id="site-pref-list">
    <h1  class="myaccountheader">Customer</h1>

    <center><%= link_to 'New Customer', :action=>:create_empty_record,:typeofrecord=>"customer" %></center>

    <%  @customers.each do |customer| %>
      <div class="hr"></div>
      <table class="list-table" width ="100%"cellpadding="5" cellspacing="0">
        <tr class="list-table" valign="top" class="<%= cycle('list-line-odd', 'list-line-even') %>"  onclick = "window.location.href ='<%=url_for(:controller => 'customers', :id => customer.id,  :action => 'edit')%>' "  style = "cursor:pointer" >
                   <td align="left">
    <span class="list-title"><%= customer.company_name %></span>
          </td>
                                    <td align="left">

    <span class="list-title"><%= customer.phone_number %></span>
          </td>
                   <td align="left">
    <span class="list-title"><%= customer.email_address %></span>
          </td>
                   <td align="left">
    <span class="list-title"><%= customer.contact_name %></span>
          </td>
          
        </tr>
      </table>
      <div align="right" class="image-delete-list" >
        <%=link_to image_tag ("Button-Delete.png", :border=>"0") , customer,:on_click=>"", :confirm => 'Are you sure?', :method => :delete %>
      </div>
    <% end %>
    <div class="hr"></div>

  </div>
    <center><%= link_to 'New Customer', :action=>:create_empty_record,:typeofrecord=>"customer" %></center>
</div>
