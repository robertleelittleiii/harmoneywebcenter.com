<div id="billing-address">
  <fieldset class="address-legend" >
    <legend class="address-lable"> Billing Address</legend>
    <table  class="address-table">
      <tbody>
        <tr>
          <td colspan="3">
            Street: <%=editablefieldcreate("billing_street_address", @customer)%>
          </td>
        </tr>
        <tr>
          <td>City: <%=editablefieldcreate("billing_city", @customer)%></td>
          <td>State: <%=editablefieldcreate("billing_state", @customer)%></td>
          <td>Zip: <%=editablefieldcreate("billing_zip_code", @customer)%></td>

        </tr>
      </tbody>
    </table>
  </fieldset>
</div>

<div  id="shipping-address">
  <fieldset class="address-legend">
    <legend class="address-lable"> Shipping Address</legend>
    <table  class="address-table">
      <tbody>
        <tr>
          <td colspan="3">
            Street: <%=editablefieldcreate("shipping_street_address", @customer)%>
          </td>
        </tr>
        <tr>
          <td>City: <%=editablefieldcreate("shipping_city", @customer)%></td>
          <td>State: <%=editablefieldcreate("shipping_state", @customer)%></td>
          <td>Zip: <%=editablefieldcreate("shipping_zip_code", @customer)%></td>

        </tr>
      </tbody>
    </table>
  </fieldset>
</div>
<p>
<div id="contact-person">
  <fieldset class="contact-legend" >
    <legend class="contact-lable"> Contact Person</legend>
    <table  class="contact-table">
      <tbody>
        <tr>
          <td colspan="3">
            Full Name: <%=editablefieldcreate("contact_name", @customer)%>
          </td>
        </tr>
        <tr>
          <td>(ph)<%=editablefieldcreate("phone_number", @customer)%></td>
          <td>(fx)<%=editablefieldcreate("fax_number", @customer)%></td>
          <td>(email)<%=editablefieldcreate("email_address", @customer)%></td>
        </tr>
      </tbody>
    </table>
  </fieldset>
</div>
</p>

