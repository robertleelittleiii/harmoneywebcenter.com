
<div class="myaccountblock" Align="Left">
  <div class="myaccountheader">Edit Menu</div>
  <div class="myaccountsection">
    <div class="myaccountheading">Information</div>
    <div class="myaccountcontent">


      <p>
        <b>Name:</b><br>
        <%=editablefieldcreate("name", @menu)%>
      </p>

        <%if @menu.parent_id!=0 then %>
        <p>
          <b>Type of Menu:</b>

        <%=ajax_select2("m_type","menu",@menu, @menu_type)%><br><br>

        <div id="menu-options" data-id="<%=@menu.id%>">

                <%=render :partial=>(@menu_type.select{|name,id| id==@menu.m_type.to_i}.first.first+ "_type.html") rescue ""%>

        </div>
        </p>

        <p></p>
        <%end%>
    </div>
  </div>
  <p><%= link_to 'Back', menus_path %></p>
</div>
